{
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  "blueprint.templatesPath": [".vscode/blueprint-templates"],
  "editor.autoClosingBrackets": "always", // 是否自動補齊右括號 {}
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    // for stylelint (need to install "stylelint" "stylelint-config-standard" "stylelint-config-sass-guidelines"  in dev environment)
    // completed command: $ npm install --save-dev stylelint stylelint-config-standard stylelint-config-sass-guidelines
    "source.fixAll.stylelint": true
  }
}
